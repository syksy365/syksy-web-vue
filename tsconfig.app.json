{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "src/*.vue",
        "src/types/*.d.ts"
    ],
    "exclude": [
        "src/**/__tests__/*"
    ]
}
